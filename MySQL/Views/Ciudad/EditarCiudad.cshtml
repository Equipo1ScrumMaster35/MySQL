@model CiudadModel
@{
    ViewData["Title"] = "EditarCiudad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar ciudad
    </div>
    <div class="card-body">
        <form asp-action="EditarCiudad" asp-controller="Ciudad" method="post">
            <input asp-for="cod_ciudad" type="hidden" class="form-control">
            <div class="form-group">
                <label>Nombre ciudad</label>
                <input asp-for="nom_ciudad" type="text" class="form-control">
                <span asp-validation-for="nom_ciudad" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label>Coordinador ciudad</label>
                <input asp-for="coordinador_ciudad" type="text" class="form-control">
                <span asp-validation-for="coordinador_ciudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>País</label>
                    @Html.DropDownList("fk_codpais", ViewBag.ListaPais as SelectList,"Seleccione", new{@class="form-control"})
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Editar</button>
            <a asp-action="ListarCiudad" asp-controller="Ciudad" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>