@model PuntoFisicoModel
@{
    ViewData["Title"] = "EditarPuntoFisico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar ciudad
    </div>
    <div class="card-body">
        <form asp-action="EditarPuntoFisico" asp-controller="PuntoFisico" method="post">
            <input asp-for="cod_ptofisico" type="hidden" class="form-control">
            <div class="form-group">
                <label>Nombre punto</label>
                <input asp-for="nom_ptofisico" type="text" class="form-control">
                <span asp-validation-for="nom_ptofisico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Dirección</label>
                <input asp-for="direccion_ptofisico" type="text" class="form-control">
                <span asp-validation-for="direccion_ptofisico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Estado</label>
                <select asp-for="estado_ptofisico" class="form-control">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                    <span asp-validation-for="estado_ptofisico" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label>Responsable</label>
                @Html.DropDownList("fk_docintegrante", ViewBag.ListaIntegrante as SelectList,"Seleccione", new{@class="form-control"})
            </div>
            <div class="form-group">
                <label>Campaña</label>
                @Html.DropDownList("fk_codcampana", ViewBag.ListaCampana as SelectList,"Seleccione", new{@class="form-control"})
            </div>
            <div class="form-group">
                <label>Ciudad</label>
                @Html.DropDownList("fk_codciudad", ViewBag.ListaCiudad as SelectList,"Seleccione", new{@class="form-control"})
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Editar</button>
            <a asp-action="ListarPuntoFisico" asp-controller="PuntoFisico" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>