@model TipoDocumentoModel
@{
    ViewData["Title"] = "EliminarTipoDocumento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar tipo documento
    </div>
    <div class="card-body">
        <form asp-action="EliminarTipoDocumento" asp-controller="TipoDocumento" method="post">
            <input asp-for="cod_tipodocumento" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el tipo documento: @Html.DisplayTextFor(m=>m.nom_tipodocumento)?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="ListarTipoDocumento" asp-controller="TipoDocumento" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>