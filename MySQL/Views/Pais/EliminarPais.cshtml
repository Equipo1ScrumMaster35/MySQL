@model PaisModel

@{
    ViewData["Title"] = "EliminarPais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar país
    </div>
    <div class="card-body">
        <form asp-action="EliminarPais" asp-controller="Pais" method="post">
            <input asp-for="cod_pais" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el país: @Html.DisplayTextFor(m=>m.nom_pais)?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="ListarPais" asp-controller="Pais" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>
