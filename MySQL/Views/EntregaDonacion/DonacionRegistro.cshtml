@model EntregaDonacionModel
@{
    ViewData["Title"] = "DonacionRegistro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Entrega Donación</h1>
<div class="col-md-2"></div>
<div class="col-md-7">
    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-body">
            <form asp-action="DonacionRegistro" asp-controller="EntregaDonacion" method="post">
                <div class="form-group">
                    <label>Fecha recolección</label>
                    <input asp-for="fecha_entregadonacion" type="date" class="form-control" required>
                    <span asp-validation-for="fecha_entregadonacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Observación</label>
                    <input asp-for="observacion" type="text" class="form-control" required>
                    <span asp-validation-for="observacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Producto</label>
                    @Html.DropDownList("fk_codproducto", ViewBag.ListaProducto as SelectList,"Seleccione", new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Cantidad</label>
                    <input asp-for="cantidad" type="number" class="form-control" required>
                    <span asp-validation-for="cantidad" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Donar</button>
            </form>
        </div>
    </div>
</div>