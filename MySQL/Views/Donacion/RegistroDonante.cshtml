
@{
    ViewData["Title"] = "RegistroDonante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro Donante</h2>

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-5">
            <div class="card">
                <div class="card-header">
                    Donación con registro
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="form-group">
                            <label>Tipo documento:</label>
                            <select id="tipodocumento" name="tipodocumento" required>
                                <option value="" disabled selected>Elija un tipo</option>
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <label>Número de documento:</label>
                            <input type="text" class="form-control" value="" name="num_doc" id="num_doc" required="">
                        </div>
                        <div class="form-group">
                            <label>Nombre completo o razón social</label>
                            <input type="text" class="form-control" value="" name="nom_comple" id="nom_comple" required="">
                        </div>
                        <br>
                        <div class="btn-group" role="group" aria-label="">
                            <button type="submit" name="accion" value="dona_registro" class="btn btn-primary">Dona</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-5">
            <div class="card">
                <div class="card-header">
                    Donación de manera anónima
                </div>
                <br>
                <br>
                <div class="card-body">
                    <form method="POST">
                        <div>
                            <label for="">¿Deseas donar de manera anónima?</label>
                        </div>
                        <br>
                        <div>
                            <label for="">Da clic en el botón de donar</label>
                        </div>
                        <br>
                        <br>
                        <div class="btn-group" role="group" aria-label="">
                            <button type="submit" name="accion" value="" class="btn btn-primary">Dona</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
